generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  discordId  String   @unique
  username   String
  avatar     String?
  isRaidlead Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Raid {
  id         Int      @id @default(autoincrement())
  title      String
  difficulty String
  lootType   String
  bosses     Int?
  date       DateTime
  lead       String
  createdAt  DateTime @default(now())
}
