generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  discordId  String   @unique
  username   String
  avatar     String?
  createdAt  DateTime @default(now())
}

model Raid {
  id         Int      @id @default(autoincrement())
  title      String
  difficulty String
  lootType   String
  date       DateTime
  lead       String?
  bosses     Int      @default(8)
  channelId  String?
}

model Chars {
  id        Int      @id @default(autoincrement())
  ownerId   String
  name      String
  realm     String   // slug, z.B. "silvermoon"
  region    String   // EU | US | ...
  class     String?
  spec      String?
  rioScore  Float?
  rioJson   String?  // <-- statt Json, wir speichern JSON.stringify(...)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([ownerId, name, realm, region], name: "ownerId_name_realm_region")
}

