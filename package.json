{
  "name": "raid-platform",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "concurrently -n BACKEND,FRONTEND,STUDIO -c blue,green,magenta \"node src/backend/server.js\" \"vite --config src/frontend/vite.config.js\" \"npm run prisma:studio\"",
    "build:frontend": "vite build --config src/frontend/vite.config.js",
    "prisma:generate": "prisma generate --schema src/backend/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --name init --schema src/backend/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema src/backend/prisma/schema.prisma --port 5555"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.23.8",

    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "prisma": "^5.22.0",
    "concurrently": "^8.2.2",
    "vite": "^5.4.10",
    "@vitejs/plugin-react": "^4.3.2",
    "tailwindcss": "^3.4.13",
    "autoprefixer": "^10.4.20"
  }
}
